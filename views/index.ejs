<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main bg-zinc-900 w-full min-h-screen p-10">
    <div class="form text-white">
      <h1 class="text-3xl mb-5">Create a New Task</h1>
      <form action="/create" method="post">
        <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 mb-4" type="text" placeholder="Title goes here..." name="title" required>
        <textarea class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 mb-4 resize-none" placeholder="Write your task details..." name="details" required></textarea>
        <input class="bg-yellow-600 px-5 py-2 rounded-md cursor-pointer" type="submit" value="Create Task">
      </form>
    </div>

    <div class="tasks p-10 flex gap-3 flex-wrap">
      <% if (files && files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-white text-xl tracking-tighter"><%= val %></h1>
            <div class="flex w-full justify-between items-center mt-3">
              <a class="text-yellow-600" href="/file/<%= val %>">Read More</a>
              <a class="text-zinc-600" href="/edit/<%= val %>">Edit Filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-600">No tasks yet</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
